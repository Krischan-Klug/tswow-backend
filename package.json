{
  "name": "tswow-backend",
  "version": "1.0.0",
  "private": true,
  "description": "TSWoW/TrinityCore Auth backend (Express, MySQL & SRP6)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsx watch index.ts",
    "check:plugins": "tsx src/plugins/core/validate-plugins.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "tswow",
    "trinitycore",
    "srp6",
    "express",
    "mysql2",
    "auth"
  ],
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.3",
    "semver": "^7.6.2",
    "trinitycore-srp6": "github:Krischan-Klug/trinitycore-srp6#main"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.30",
    "@types/semver": "^7.7.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.20.5",
    "typescript": "^5.4.2"
  }
}
